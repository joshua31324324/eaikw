---
layout: layouts/base.njk
title: Onboarding - Job Club
description: Start your Job Club onboarding journey. Complete your profile, get personalized guidance, and connect with mentors.
---

{% import "components/ui.njk" as ui %}

<div style="min-height: 100vh; padding-top: var(--space-4xl); padding-bottom: var(--space-4xl); background: var(--swiss-white);">
  <div style="max-width: 60ch; margin: 0 auto; padding: 0 var(--swiss-grid-margin);">
    <!-- Header -->
    <div style="text-align: center; margin-bottom: var(--space-3xl);">
      <h1 style="font-size: var(--fluid-h1); font-weight: 900; margin-bottom: var(--space-lg); color: var(--swiss-black);">Job Club Onboarding</h1>
      <p style="font-size: var(--fluid-body-lg); color: var(--swiss-gray-700);">Share your info to get a personalized checklist, Discord access, and events matched to your goals. Takes ~5 minutes.</p>
    </div>

    <!-- Progress / steps -->
    <div class="mb-10">
      {% set steps = [
        {"kicker":"Step 1","title":"Profile","body":"Name, email, major, graduation."},
        {"kicker":"Step 2","title":"Goals","body":"Select your target path."},
        {"kicker":"Step 3","title":"Links","body":"LinkedIn, GitHub, portfolio, Calendly."},
        {"kicker":"Step 4","title":"Review & Consent","body":"Confirm sharing for checklist + Discord."}
      ] %}
      {{ ui.stepGrid(steps, 4) }}
    </div>

    <!-- Onboarding Form -->
    <form id="jobclub-onboarding" class="card" method="POST" action="/api/onboarding">
      <!-- Personal Information -->
      <fieldset style="margin-bottom: var(--space-2xl);">
        <legend style="font-size: var(--fluid-h3); font-weight: 900; color: var(--swiss-black); margin-bottom: var(--space-lg);">Personal Information</legend>
        
        <div class="grid md:grid-cols-2" style="gap: var(--space-lg);">
          <div>
            <label for="name" style="display: block; font-weight: 600; font-size: var(--fluid-body-sm); margin-bottom: var(--space-sm); color: var(--swiss-black);">
              Full Name <span style="color:var(--swiss-red)">*</span>
            </label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required
              class="input"
              placeholder="John Doe"
            >
          </div>

          <div>
            <label for="email" style="display: block; font-weight: 600; font-size: var(--fluid-body-sm); margin-bottom: var(--space-sm); color: var(--swiss-black);">
              Email Address <span style="color:var(--swiss-red)">*</span>
            </label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required
              class="input"
              placeholder="john@example.com"
            >
          </div>

          <div>
            <label for="major" style="display: block; font-weight: 600; font-size: var(--fluid-body-sm); margin-bottom: var(--space-sm); color: var(--swiss-black);">
              Major / Field <span style="color:var(--swiss-red)">*</span>
            </label>
            <input 
              type="text" 
              id="major" 
              name="major" 
              required
              class="input"
              placeholder="Computer Science, Data Science, etc."
            >
          </div>

          <div>
            <label for="graduation_year" style="display: block; font-weight: 600; font-size: var(--fluid-body-sm); margin-bottom: var(--space-sm); color: var(--swiss-black);">
              Expected Graduation Year <span style="color:var(--swiss-red)">*</span>
            </label>
            <select 
              id="graduation_year" 
              name="graduation_year" 
              required
              class="input"
            >
              <option value="">Select year</option>
              <option value="2025">2025</option>
              <option value="2026">2026</option>
              <option value="2027">2027</option>
              <option value="2028">2028</option>
            </select>
          </div>
        </div>
      </fieldset>

      <!-- Career Goals -->
      <fieldset style="margin-bottom: var(--space-2xl);">
        <legend style="font-size: var(--fluid-h3); font-weight: 900; color: var(--swiss-black); margin-bottom: var(--space-lg);">Career Goals</legend>
        
          <div>
            <label for="career_goal" style="display: block; font-weight: 600; font-size: var(--fluid-body-sm); margin-bottom: var(--space-sm); color: var(--swiss-black);">
              What's your primary career goal? <span style="color:var(--swiss-red)">*</span>
            </label>
            <select 
              id="career_goal" 
              name="career_goal" 
              required
              class="input"
            >
              <option value="">Select a goal</option>
              <option value="ai-consultant">AI Consultant</option>
              <option value="ai-startup">AI Startup Founder</option>
              <option value="ai-engineer">AI Software Engineer</option>
              <option value="data-scientist">Data Scientist</option>
              <option value="product-manager">Product Manager (AI)</option>
              <option value="other">Other</option>
            </select>
          </div>
      </fieldset>

      <!-- Professional URLs -->
      <fieldset style="margin-bottom: var(--space-2xl);">
        <legend style="font-size: var(--fluid-h3); font-weight: 900; color: var(--swiss-black); margin-bottom: var(--space-lg);">Professional Assets</legend>
        <p style="font-size: var(--fluid-body-sm); color: var(--swiss-gray-700); margin-bottom: var(--space-lg);">We'll help you build these if you don't have them yet!</p>
        
        <div style="display:flex;flex-direction:column;gap:var(--space-md);">
          <div>
            <label for="linkedin_url" style="display: block; font-weight: 600; font-size: var(--fluid-body-sm); margin-bottom: var(--space-sm); color: var(--swiss-black);">
              LinkedIn Profile URL
            </label>
            <input 
              type="url" 
              id="linkedin_url" 
              name="linkedin_url"
              class="input"
              placeholder="https://linkedin.com/in/yourprofile"
            >
          </div>

          <div>
            <label for="github_url" style="display: block; font-weight: 600; font-size: var(--fluid-body-sm); margin-bottom: var(--space-sm); color: var(--swiss-black);">
              GitHub Profile URL
            </label>
            <input 
              type="url" 
              id="github_url" 
              name="github_url"
              class="input"
              placeholder="https://github.com/yourprofile"
            >
          </div>

          <div>
            <label for="portfolio_url" style="display: block; font-weight: 600; font-size: var(--fluid-body-sm); margin-bottom: var(--space-sm); color: var(--swiss-black);">
              Personal Portfolio Website
            </label>
            <input 
              type="url" 
              id="portfolio_url" 
              name="portfolio_url"
              class="input"
              placeholder="https://yourportfolio.com"
            >
          </div>

          <div>
            <label for="calendly_url" style="display: block; font-weight: 600; font-size: var(--fluid-body-sm); margin-bottom: var(--space-sm); color: var(--swiss-black);">
              Calendly Link (for scheduling meetings)
            </label>
            <input 
              type="url" 
              id="calendly_url" 
              name="calendly_url"
              class="input"
              placeholder="https://calendly.com/yourname"
            >
          </div>
        </div>
      </fieldset>

      <!-- Consent -->
      <fieldset style="margin-bottom: var(--space-2xl);">
        <div style="display:flex;align-items:flex-start;gap:var(--space-md);">
          <input 
            type="checkbox" 
            id="consent" 
            name="consent" 
            required
            style="margin-top:0.25rem;width:1rem;height:1rem;"
          >
          <label for="consent" style="font-size: var(--fluid-body-sm); color: var(--swiss-gray-700);">
            I agree to join Job Club and receive personalized guidance emails. My data will be used to build my checklist and connect me to Discord/CRM. <a href="/privacy" style="color: var(--swiss-black); text-decoration: underline; text-decoration-thickness: 2px; text-underline-offset: 3px;">Read our privacy policy</a>.
          </label>
        </div>
      </fieldset>

      <!-- Submit Button -->
      <button 
        type="submit" 
        class="btn-swiss-primary"
        style="width:100%;margin-top:var(--space-lg);margin-bottom:var(--space-lg);"
      >
        Complete Onboarding & Get Checklist
      </button>

      <p style="font-size: var(--fluid-body-sm); color: var(--swiss-gray-700); text-align: center;">
        We'll flag missing assets (LinkedIn, GitHub, portfolio, Calendly) and email your personalized next steps.
      </p>
    </form>

    <!-- What happens next -->
    <div style="margin-top:var(--space-4xl);padding:var(--space-lg);border:2px solid var(--swiss-black);">
      <h3 style="font-weight: 900; font-size: var(--fluid-h3); color: var(--swiss-black); margin-bottom: var(--space-md);">What happens next</h3>
      <ul style="display:flex;flex-direction:column;gap:var(--space-md);font-size: var(--fluid-body-sm);color: var(--swiss-gray-800);">
        <li>âœ” You get a personalized checklist and guides.</li>
        <li>âœ” Discord intro post to #jobclub-intros.</li>
        <li>âœ” Events and resources matched to your goal.</li>
        <li>âœ” CRM entry for mentorship + follow-ups.</li>
      </ul>
    </div>

    <!-- Success Message (Hidden by default) -->
    <div id="success-message" style="display:none;padding:var(--space-lg);border:2px solid var(--swiss-black);">
      <h2 style="font-size: var(--fluid-h2); font-weight: 900; color: var(--swiss-black); margin-bottom: var(--space-md);">Welcome to Your AI Career Pipeline! ðŸŽ‰</h2>
      <p style="font-size: var(--fluid-body); color: var(--swiss-gray-800); margin-bottom: var(--space-md);">Check your email for your personalized career readiness checklist and guided onboarding milestones.</p>
      <p style="font-size: var(--fluid-body); color: var(--swiss-gray-800);">We've also added you to our mentoring community on Discord. <a href="https://discord.gg/jobclub" style="font-weight: 900; text-decoration: underline; text-decoration-thickness: 2px; text-underline-offset: 3px;">Join now to connect with peers on the same path</a>!</p>
    </div>

    <!-- Help Section -->
    <div style="margin-top:var(--space-4xl);padding:var(--space-lg);border:2px solid var(--swiss-black);">
      <h3 style="font-size: var(--fluid-h3); font-weight: 900; color: var(--swiss-black); margin-bottom: var(--space-md);">Need Help?</h3>
      <p style="font-size: var(--fluid-body); color: var(--swiss-gray-800); margin-bottom: var(--space-md);">
        If you have questions about onboarding or Job Club, reach out to us:
      </p>
      <ul style="display:flex;flex-direction:column;gap:var(--space-sm);font-size: var(--fluid-body-sm);color: var(--swiss-gray-800);">
        <li>ðŸ“§ Email: <a href="mailto:jobclub@njit.edu" style="color: var(--swiss-black); text-decoration: underline; text-decoration-thickness: 2px; text-underline-offset: 3px;">jobclub@njit.edu</a></li>
        <li>ðŸ’¬ Discord: <a href="https://discord.gg/jobclub" style="color: var(--swiss-black); text-decoration: underline; text-decoration-thickness: 2px; text-underline-offset: 3px;">Job Club Server</a></li>
        <li>ðŸ“… Schedule: <a href="https://calendly.com/jobclub" style="color: var(--swiss-black); text-decoration: underline; text-decoration-thickness: 2px; text-underline-offset: 3px;">Office Hours</a></li>
      </ul>
    </div>
  </div>
</div>

<script>
  document.getElementById('jobclub-onboarding').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Show loading state
    const submitBtn = e.target.querySelector('button[type="submit"]');
    const originalText = submitBtn.textContent;
    submitBtn.disabled = true;
    submitBtn.textContent = 'Processing...';
    
    try {
      // Collect form data
      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData);
      
      // Remove consent checkbox from submission
      delete data.consent;
      
      // Send to API endpoint
      const response = await fetch('/api/onboarding', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });
      
      const result = await response.json();
      
      if (response.ok) {
        // Hide form, show success message
        document.getElementById('jobclub-onboarding').classList.add('hidden');
        document.getElementById('success-message').classList.remove('hidden');
      } else {
        // Show error message
        const errorMsg = result.errors?.join(', ') || result.error || 'An error occurred';
        alert('Error: ' + errorMsg);
        submitBtn.disabled = false;
        submitBtn.textContent = originalText;
      }
    } catch (error) {
      console.error('Submission error:', error);
      alert('Failed to submit form. Please try again.');
      submitBtn.disabled = false;
      submitBtn.textContent = originalText;
    }
  });
</script>
